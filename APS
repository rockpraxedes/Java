import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import javax.swing.*;
import java.io.*;

public class Jogo extends JFrame implements ActionListener {

	//declarando variaveis
	private static final long serialVersionUID = 1L;
	private JFrame frame;
	private JPanel total,bot;
	private JButton botoes[][] = new JButton[30][30];
	


	public static void main(String[] args) {
		
		Jogo recicle = new Jogo ();
	

	}


	
	public Jogo(){
		
		//dando super da classe
		super("Pagina Principal");
		
		//iniciando janela
		JFrame frame = new JFrame("Misk CK.");  
		
		//Setando configs da janela // pack();
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.setVisible(true);
		frame.setLocation(0,0);
		frame.setSize(500,500);
		frame.setResizable(true);	

		//iniciando os layouts
		GridLayout grid = new GridLayout(11,11,2,2);
		FlowLayout flow = new FlowLayout();
		
		//iniciando os paineis que vao dentro da JANELA com os layouts setados
		JPanel total = new JPanel(grid);
		JPanel bot = new JPanel(flow);
		
		//iniciando itens que irao dentro dos paineis
		for(int x=1;x<=11;x++){
			for(int y=1;y<=11;y++){
				botoes[x][y] = new JButton(""+x+""+y);
				total.add(botoes[x][y]);
				botoes[x][y].addActionListener(this);
			}
		}
		botoes[1][2].setBackground(Color.RED);
		botoes[1][4].setBackground(Color.YELLOW);	
		botoes[1][6].setBackground(Color.GREEN);
		botoes[1][8].setBackground(Color.BLUE);	
		botoes[1][10].setBackground(Color.GRAY);
		botoes[11][6].setBackground(Color.BLACK);
		
		//Adicionando arquivos as Janelas e paineis
		frame.add(total);
		//total.add(bot);
		
		botoes[1][2].setEnabled(false); 
		botoes[1][2].setText("Plastico"); 
		botoes[1][4].setEnabled(false); 
		botoes[1][4].setText("Metal"); 
		botoes[1][6].setEnabled(false); 
		botoes[1][6].setText("Vidro"); 
		botoes[1][8].setEnabled(false); 
		botoes[1][8].setText("Papel"); 
		botoes[1][10].setEnabled(false); 
		botoes[1][10].setText("Organico"); 
		total.setBackground(Color.BLACK);

		
		
	}
	
	public void actionPerformed(ActionEvent e) {
		
		for(int x=1;x<=11;x++){
			for(int y=1;y<=11;y++){
				if (e.getSource()  instanceof  JButton){ 
					((JButton)e.getSource()).setBackground(Color.BLACK); 
				} 
			}
		}
	}
}
